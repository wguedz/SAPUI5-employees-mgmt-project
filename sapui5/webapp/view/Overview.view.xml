
<mvc:View 
    controllerName="logaligroup.sapui5.controller.Overview" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:tnt="sap.tnt" 
    displayBlock="true" 
    xmlns="sap.m">  
       
	<Page id="page" title="{i18n>title}">
		<content>

            <Panel expandable="true" expanded="true" headerText="{i18n>panelEmployees}" width="auto" class="sapUiResponsiveMargin">
                
                <GenericTile  class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>btnCreateEmployee}" press="fnCreateEmployee">
                    <TileContent>
                        <ImageContent src="sap-icon://add-employee" />
                    </TileContent>
                </GenericTile> 
                      
                <GenericTile  class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>btnLookupEmployee}" press="fnLookupEmployee">
                    <TileContent>
                        <ImageContent src="sap-icon://employee-lookup" />
                    </TileContent>
                </GenericTile> 

            </Panel>     

            <Panel expandable="true" expanded="true" headerText="{i18n>panelOrders}" width="auto" class="sapUiResponsiveMargin">
                
                <GenericTile  class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout" header="{i18n>btnSignalOrder}" press="fnSigOrderBtn">
                    <TileContent>
                        <ImageContent src="sap-icon://eraser" />
                    </TileContent>
                </GenericTile>   
                              
            </Panel> 

        </content>
	</Page> 
</mvc:View>
