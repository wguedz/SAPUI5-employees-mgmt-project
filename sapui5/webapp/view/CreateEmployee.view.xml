<mvc:View
        controllerName="logaligroup.sapui5.controller.CreateEmployee"
		height="100%" 
		xmlns:form="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
	
        xmlns:ui="sap.ui.unified"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns="sap.m"> 
        <NavContainer id="wizardNavContainer">
            <pages>
				<Page
				id="wizardContentPage"
				showHeader="false"> 
					<content>
						<Wizard id="CreateEmployeetWizard" class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
								complete="wizardCompletedHandler"> 
                            <WizardStep id="EmployeeTypeStep" title="{i18n>employeeType}" validated="true">
                                <MessageStrip class="sapUiSmallMarginBottom" text="{i18n>messageStrip1}" showIcon="true"/>
                                <HBox alignItems="Center" justifyContent="Center" width="100%">
                                    <SegmentedButton id="sgmBtn" width="320px" selectionChange="setEmployeeTypeFromSegmented">
                                        <items>
                                            <SegmentedButtonItem key="0" text="{i18n>btnInternalEmployee}"/>
                                            <SegmentedButtonItem key="1" text="{i18n>btnAutonomEmployee}"/>
                                            <SegmentedButtonItem key="2" text="{i18n>btnManagerEmployee}"/>
                                        </items>
                                    </SegmentedButton>
                                </HBox>
                            </WizardStep>
							<WizardStep id="EmployeeInfoStep"
										validated="false"
										title="{i18n>employeeInfo}"
										activate="additionalInfoValidation">
								<MessageStrip class="sapUiSmallMarginBottom"
										text="{i18n>messageStrip2}"
										showIcon="true"/>
                                <form:SimpleForm editable="true">
                                    <Label text="{i18n>firstName}" labelFor="FirstName"/>
                                    <Input id="FirstName" liveChange="additionalInfoValidation" value="{/FirstName}" required="true"/>
                                    <Label text="{i18n>lastName}" labelFor="LastName"/>
                                    <Input id="LastName"  liveChange="additionalInfoValidation" value="{/LastName}" required="true"/>
                                    <Label text="{i18n>DNI}" labelFor="dni"/>
                                    <Input id="dni" liveChange="onDniChange" required="true" value="{/DNI}"/>
                                    <Label text="{i18n>CIF}" labelFor="cif"/>
                                    <Input id="cif" liveChange="additionalInfoValidation" value="{/CIF}" required="true"/>
                                    <Label text="{i18n>annualGrossBalance}" class="sapUiSmallMarginBottom" labelFor="AnnualGrossBalance"/>
                                    <Slider id="AnnualGrossBalance" value="{/annualGrossBalance}" min="12000" max="80000" step="5000" width="95%" enableTickmarks="true" class="sapUiSmallMargin"/>
                                    <Label text="{i18n>actualPrice}" class="sapUiSmallMarginBottom" labelFor="ActualPrice"/>
                                    <Slider id="ActualPrice" value="{/actualPrice}" min="100" max="2000" step="100" width="95%" enableTickmarks="true" class="sapUiLargeMarginBottom"/>
                                    <Label text="{i18n>date}" labelFor="date"/>
                                    <Input id="date" type="Date" liveChange="additionalInfoValidation" value="{/date}" required="true" />                                    
                                </form:SimpleForm>                                       
                            </WizardStep>
							<WizardStep id="OptionalInfoStep"
										validated="true"
										activate="optionalStepActivation"
										title="{i18n>optionalInfo}">
                                        <MessageStrip class="sapUiSmallMarginBottom"
										text="{i18n>messageStrip3}"
										showIcon="true"/>
                                <VBox class="sapUiTinyMargin" renderType="Bare">
                                    <Label text="{i18n>notes}" />
                                    <TextArea id="TextArea" value="{/notes}" cols="200" height="100px" />
                                </VBox>
                                <UploadCollection
                                    id="UploadCollection"
                                    maximumFilenameLength="55"
                                    maximumFileSize="10"
                                    multiple="true"
                                    uploadUrl="{/url}"
                                    sameFilenameAllowed="true"
                                    instantUpload="false"
                                    noDataDescription="{i18n>description}"
                                    change="onChange"
                                    fileDeleted="onFileDeleted"
                                    filenameLengthExceed="onFilenameLengthExceed"
                                    fileSizeExceed="onFileSizeExceed"
                                    typeMissmatch="onTypeMissmatch"
                                    uploadComplete="onUploadComplete"
                                    beforeUploadStarts="onBeforeUploadStarts" />  
                            </WizardStep>                                                                    
                   	    </Wizard>
					</content>  
					<footer>
						<OverflowToolbar>
							<ToolbarSpacer/>
							<Button text="Cancel" press="handleWizardCancel"/>
						</OverflowToolbar>
					</footer>                                                        
                </Page>
                <Page id="wizardReviewPage" showHeader="false">    
                    <content>
						<form:SimpleForm
								title="1. {i18n>employeeType}"
								minWidth="1024"
								editable="false"
								layout="ResponsiveGridLayout">
							<form:content>
								<Label text="{i18n>type}"/>
								<Text id="EmployeeTypeChosen" text="{/employeeType}"/>
								<Link press="editStepOne" text="Edit" />
							</form:content>
						</form:SimpleForm>
						<form:SimpleForm
								title="2. {i18n>employeeInfo}"
								minWidth="1024"
								editable="false"
								layout="ResponsiveGridLayout">
							<form:content>
								<Label id="FirstNameLabel" text="{i18n>firstName}" labelFor="FirstNameChosen"/>
								<Text  id="FirstNameChosen" text="{/FirstName}"/>
								<Label id="LastNameLabel" text="{i18n>lastName}" labelFor="LastNameChosen"/>
								<Text  id="LastNameChosen" text="{/LastName}" />
								<Label id="dniLabel" text="{i18n>DNI}" labelFor="dniChosen"/>
								<Text  id="dniChosen" text="{/DNI}"/>
								<Label id="cifLabel" text="{i18n>CIF}" labelFor="cifChosen"/>
								<Text id="cifChosen" text="{/CIF}"/>
								<Label id="annualGrossBalanceLabel" text="{i18n>annualGrossBalance}" labelFor="annualGrossBalanceChosen"/>
								<Text id="annualGrossBalanceChosen" text="{/annualGrossBalance}"/>    
								<Label id="actualPriceLabel" text="{i18n>actualPrice}" labelFor="actualPriceChosen"/>
								<Text id="actualPriceChosen" text="{/actualPrice}"/>                                  
								<Label id="dateLabel" text="{i18n>date}" labelFor="dateChosen"/>
								<Text id="dateChosen" text="{/date}"/>                                                                  
								<Link press="editStepTwo" text="Edit" />
							</form:content>                            
						</form:SimpleForm>  
						<form:SimpleForm
								title="3. {i18n>optionalInfo}"
								minWidth="1024"
								editable="false"
								layout="ResponsiveGridLayout">
							<form:content>
								<Label text="{18n>notes}"/>
								<Text text="{/notes}"/>
								<Label text="Document"/>
                            <UploadCollection id="updCollection">            
                                <items>
                                    <UploadCollectionItem
                                        documentId="documentId"
                                        fileName="fileName"
                                        mimeType="mimeType" 
                                        url="{/url}" /> 
                                </items>
                            </UploadCollection> 
                            <Link press="editStepThree" text="Edit" />
						</form:content>
						</form:SimpleForm>                                              
                    </content>
                    <footer>
                    	<Bar>
							<contentRight>
								<Button text="{i18n>submit}" press="handleWizardSubmit"/>
								<Button text="{i18n>cancel}" press="handleWizardCancel"/>
							</contentRight>
						</Bar>
                    </footer>
                </Page>      
            </pages>
	</NavContainer>          
</mvc:View>        